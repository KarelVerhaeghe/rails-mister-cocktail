<h1>All cocktails</h1>
<h2><%= link_to "Add cocktail", new_cocktail_path %></h2>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail|  %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <% if cocktail.photos[0] != nil %>
        <div class="card" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<% cl_image_tag cocktail.photos[0].public_id, width: 300, height: 200, crop: :fill %>');">
          <p><%= cocktail.name %></p>
          <%= link_to "More details", cocktail_path(cocktail), class: "btn btn-danger" %>
        </div>
      <% else %>
        <div class="card">
          <p><%= cocktail.name %></p>
          <%= link_to "More details", cocktail_path(cocktail), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<h2><%= link_to "Add cocktail", new_cocktail_path %></h2>
