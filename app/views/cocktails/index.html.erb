<h1>All cocktails</h1>
<h2><%= link_to "Add cocktail", new_cocktail_path %></h2>
<ul>
  <% @cocktails.each do |cocktail| %>
  <li>
    <p><%= cocktail.name %></p>
    <% if cocktail.photos[0] != nil %>
      <%= cl_image_tag cocktail.photos[0].public_id, width: 300, height: 200, crop: :fill %>
    <% end %>

    <%= link_to "More details", cocktail_path(cocktail) %>
  </li>
  <% end %>
</ul>
<h2><%= link_to "Add cocktail", new_cocktail_path %></h2>
